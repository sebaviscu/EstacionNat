@model IEnumerable<MVCBlog.Core.Entities.Producto>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <button class="btn btn-primary col-md-1" id="btnMassiveEdit" onclick="location.href='@Url.Action("Create", "Productoes")'">
            <span class="glyphicon glyphicon-plus btn-xs"></span>
            Nuevo
        </button>
        <button class="btn btn-success col-md-offset-9" id="btnMassiveEdit" onclick="location.href='@Url.Action("MassiveEdit", "Productoes")'">
            <span class="glyphicon glyphicon-list-alt btn-xs"></span>
            Edicion Masiva
        </button>
    </div>
    <br />
    <table class="table col-md-12">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoProducto.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioActual)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Modified)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoProducto.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unidad)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.PrecioActual)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modified)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
